<div class="messageBox-background"></div>
<div class="card text-center messageBox">
	<div class="card-title mt-3">
		<h3>@Model.Title</h3>
	</div>
	<div class="card-body">
		<p>@Model.Message</p>
		<button class="btn mx-1" @onclick="e => OnButton1Click.InvokeAsync()">@Model.Button1Content</button>
		@if (@Model.Button2Active)
		{
			<button class="btn mx-1" @onclick="e => OnButton2Click.InvokeAsync()">@Model.Button2Content</button>
		}
	</div>
</div>

@code {
	[Parameter]
	public MessageBox Model { get; set; }
	[Parameter]
	public EventCallback OnButton1Click { get; set; }
	[Parameter]
	public EventCallback OnButton2Click { get; set; }
}
